{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active project",
            "command": "C:/msys64/ucrt64/bin/g++.exe", // Giữ nguyên đường dẫn của bạn
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                // Liệt kê tất cả các file .cpp cần compile
                "${workspaceFolder}\\main.cpp",
                "${workspaceFolder}\\utils.cpp",
                "${workspaceFolder}\\problems.cpp",
                "${workspaceFolder}\\graph.cpp",
                "-o",
                // Tên file output
                "${workspaceFolder}\\do_an.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}